<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:background="#d44343"
    android:layout_height="100dp">
    <ImageButton
        android:id="@+id/bar_see_menu"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="#00ffffff"
        android:layout_alignParentRight="true"
        android:src="@drawable/right_arrow_white"/>
    <TextView
        android:id="@+id/bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Replace me!"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/bar_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@id/bar_name"
        android:layout_marginLeft="10dp"
        android:text="Replace Me, Replace Me!, Replace Me 00000"/>

    <TextView
        android:id="@+id/bar_rating"
        android:layout_below="@id/bar_address"
        android:layout_marginTop="6dp"
        android:layout_width="80dp"
        android:textColor="#ffffff"
        android:text="Rated: 0/5"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bar_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar_address"
        android:layout_toRightOf="@id/bar_rating"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:text="Replace Me!" />
</RelativeLayout>